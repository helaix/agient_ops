# Multi-Agent Workflow Optimization Configuration

# Linear API Configuration
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_team_id_here

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=your_github_org_here
GITHUB_REPO=your_github_repo_here

# Service URLs
DATA_API_URL=https://api.yourcompany.com/data
AUTH_SERVICE_URL=https://auth.yourcompany.com
DESIGN_SYSTEM_REPO=company/design-system

# Monitoring Configuration
MONITORING_INTERVAL=300000  # 5 minutes in milliseconds
HEALTH_CHECK_INTERVAL=60000  # 1 minute in milliseconds
METRICS_RETENTION_DAYS=30

# Agent Configuration
ORCHESTRATOR_PORT=3000
DASHBOARD_PORT=3001
WEBSOCKET_PORT=8080

# Performance Targets
TARGET_REVIEW_CYCLE_TIME=48  # hours
TARGET_CONTEXT_SWITCHES=3    # per day
TARGET_INTEGRATION_CONFLICTS=0
TARGET_PATTERN_APPLICATION_RATE=100  # percentage
TARGET_LINEAR_STATE_ACCURACY=95      # percentage

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_NOTIFICATIONS=true
ESCALATION_THRESHOLD_HOURS=24

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=10MB

# Development Configuration
NODE_ENV=production
DEBUG=false

